{
  "version": 2,
  "name": "app",
  "scope": "raindrop-io",
  "trailingSlash": false,
  "public": false,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/web/prod" }
    }
  ],
  "headers": [
    { "source": "/assets/(.*)", "headers": [{ "key": "cache-control", "value": "public,max-age=31536000,immutable" }] },
    { "source": "/(.*)",        "headers": [{ "key": "X-Frame-Options", "value": "DENY" }] }
  ],
  "redirects": [
    { "source": "/legacy/4",  "destination": "https://extension.raindrop.io", "permanent": true }
  ],
  "rewrites": [
    { "source": "/pb/s.js",       "destination": "https://plausible.io/js/plausible.js" },
    { "source": "/pb/api/event",  "destination": "https://plausible.io/api/event" },
    { "source": "/(.*)",          "destination": "/index.html" }
  ]
}