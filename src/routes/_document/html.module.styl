figure {
    margin: 0
}

progress::-webkit-progress-value {
    transition: width .3s ease-in-out;
}

html {
    font-size: 16px
}

html, body, :global(#react) {
    width: 100%
    height: 100%
    overflow: hidden
    margin:0
}

input, textarea, select, button {
    font-size: 1rem
}

input, textarea, select, button {
    color: inherit
}

[hidden] {
    display: none !important;
}