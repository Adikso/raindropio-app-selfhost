.client {
    display: flex;
    align-items: center;
    padding: 14px;
    box-shadow: 0 1px 0 rgba(0,0,0,.1);

    .about {
        padding: 0 14px;
        flex: 1;

        .description {
            opacity: .6;

            &:not(:empty) {
                margin-top: 2px;
            }
        }
    }
}

.icon {
    width: 56px;
    height: 56px;
    border-radius: 4px;
    overflow: hidden;

    img, span {
        display: block;
        width: 100%;
        height: 100%;
    }

    span {
        background: silver;
    }
}