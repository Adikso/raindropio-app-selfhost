
.wrap {
	background: darken(white, 3%);
	height: 100vh;width: 100vw;
	//background-image: linear-gradient(180deg,lighten(#f8f5f2,50%),lighten(#f7f5f4,50%) 18%,lighten(#f1f3f5,50%) 35%,lighten(#f7f5f0,50%) 68%,lighten(#f6f6f8,50%));
}

html:global(.electron) .page {
	-webkit-app-region: drag;
}

.page {
	width: 100%
	height: 100%
    display: flex;
    flex-direction: column

	.centerContent {
		flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        overflow-y: auto;
        overflow-y: overlay;
        -webkit-overflow-scrolling: touch;
		flex-direction: column

		.centerContentBlock {
			width: 350px;
			max-width: 100%;
			z-index: 2;
			padding: 20px;
		}
	}

	.logoText {
		margin: 0 auto;
		margin-bottom: 20px;
		display: inline-block;
		
		svg {
			height: 14px;
    		width: auto;
		}
	}

	.logo {
		//cursor: pointer;
		display: block;
		text-align: center;
		margin: 20px 0px;
		position: relative;
		z-index: 2
	}

	.buttons {
		height: 36px;
		margin: 0 -10px;
		margin-top: 24px;
		display: flex;
		align-items: center;
		justify-content: center;
		
		.button, .button b {
			flex: 1;
			justify-content: center;
			cursor: default;
		}
		
		.button b {
			height: 32px
			line-height: 26px
		}
	}
	

	input[type="email"], input[type="text"], input[type="password"] {
		box-shadow: none;border:0;margin:0;
		display: block;
		width: 100%;
		padding: 6px 0px;
		box-shadow: 0px 1px 0px rgba(0,0,0,.1);
		margin-bottom: 10px;
		background: transparent !important;
		
		&:focus {
			box-shadow: 0px 1px 0px var(--accentColor);
		}
	}
	
	.nav {
		text-align: center;
		border-top:1px dotted rgba(0,0,0,.15);
		color: rgba(0,0,0,.3);
		font-size: 14px;
	}
}