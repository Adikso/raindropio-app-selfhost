.app {
    display: flex
    width: 100%
    height: 100%
    position: relative
}

.backdrop {
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    width: 100%
    height: 100%
}

.app[data-mode='modal'] {
    align-items: center
    justify-content: center

    .backdrop {
        background: rgba(0,0,0,.5)
        opacity: 0
        will-change: opacity
        transition: opacity .3s ease-out
    }

    &[data-status='loading'], &[data-status='ready'] {
        .backdrop {
            transition-timing-function: ease-in
            opacity: 1
        }
    }
}