.mode {
	position: absolute
	z-index: 3
	top: 1px
	left: 7px
	right: 7px
	background: white
	box-shadow: 0 0 0 var(--shadow-height) var(--shadow-color), 0 3px 15px var(--shadow-color)
	border-radius: var(--border-radius)
}

.header {
    display: flex
    align-items: center
    padding: var(--padding-small) var(--padding-medium)

    .title {
        flex: 1
        font-weight: 500
        font-size: var(--primary-font-size)

        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
        word-wrap: break-word
    }
}

.actions {
    margin-top: -10px
    display: flex
    align-items: center
    padding: var(--padding-small) var(--padding-mini)
}