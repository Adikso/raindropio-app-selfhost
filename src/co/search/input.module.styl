searchHeight = 28px;

.input {
    background: var(--alternative-background-color)
    border-radius: 3px

    form {
        display: flex
        align-items: center

        input {
            flex: 1
            min-width: 0
            border: 0
            outline: none
            background: transparent
			border: 0
			box-shadow: none
            padding: 6px 0
			margin: 0
            font-size: 14px
        }
    }

    &[data-active="true"] {
        background: var(--background-color)
        box-shadow: inset 0 0 0 1px var(--accent-color)
    }
}

.icon {
    display: flex
    align-items: center
    justify-content: center
    width: searchHeight - 4px
    height: searchHeight - 4px
    margin: 0 4px

    .magnifier {
        opacity: .5
    }
}

.button {
    width: searchHeight
    height: searchHeight
    display: flex
    align-items: center
    justify-content: center
    padding: 0
    flex-shrink: 0

    & > * {
        pointer-events: none
    }
}