.wrap {
	z-index: 999;
	box-shadow: 0px 0px 0px var(--shadow-height) var(--shadow-color), 0px 20px 50px 0px rgba(0,0,0,.1);
	border-radius: 2px;
	position: fixed;
	overflow-y: auto
	overflow-y: overlay

	top: var(--top, 10)
	left: var(--left, 10)
	max-width: calc( 100vw - var(--left) - 10px )
	max-height: calc( 100vh - var(--top) - 10px )
}

.body {
	background: var(--background-color)
}

@supports (backdrop-filter: none) {
	.body {
		background: unquote('hsla(var(--background-hsl), .8)')
		backdrop-filter: blur(20px)
	}
}