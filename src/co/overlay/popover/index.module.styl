popShadow = 0px 0px 0px 1px rgba(0,0,0,0.15), 0px 20px 50px 0px rgba(0,0,0,0.15)

.body {
	z-index: 999;
	background: rgb(250,250,250)
	box-shadow: popShadow;
	border-radius: 2px;
	position: fixed;
	max-width: 90%
	max-height: 90%
	overflow-y: overlay
}

@supports (backdrop-filter: none) {
	.body {
		background: rgba(250,250,250,.85)
		backdrop-filter: blur(10px)
	}
}