.wrap {
	z-index: 999;
	box-shadow:
		0 0 0 var(--shadow-height) rgba(0,0,0,.2),
		0 4.5px 10.2px rgba(0, 0, 0, 0.057),
		0 11.3px 25.7px rgba(0, 0, 0, 0.074),
		0 23px 52.5px rgba(0, 0, 0, 0.087),
		0 47.5px 108px rgba(0, 0, 0, 0.106),
		0 130px 296px rgba(0, 0, 0, 0.18);

	border-radius: var(--border-radius);
	position: fixed;
	overflow-y: auto
	overflow-y: overlay

	top: var(--top, 10)
	left: var(--left, 10)
	max-width: calc( 100vw - var(--left) - 10px )
	max-height: calc( 100vh - var(--top) - 10px )
}

.body {
	box-shadow: inset 0px 0px 0px var(--shadow-height) rgba(255,255,255,.2)
	background: var(--background-color)
	border-radius: var(--border-radius)
}

@supports (backdrop-filter: none) {
	.body {
		background: unquote('hsla(var(--background-hsl), .85)')
		backdrop-filter: blur(20px)
	}
}