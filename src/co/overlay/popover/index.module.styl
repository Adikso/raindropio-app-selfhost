.wrap {
	z-index: 999;
	box-shadow:
		0 0 0 var(--shadow-height) rgba(0,0,0,.2),
		0 4.5px 10.2px rgba(0, 0, 0, 0.057),
		0 11.3px 25.7px rgba(0, 0, 0, 0.074),
		0 23px 52.5px rgba(0, 0, 0, 0.087),
		0 47.5px 108px rgba(0, 0, 0, 0.106);

	border-radius: var(--border-radius);
	position: fixed;
	overflow-y: auto
	max-width: 90vw
	max-height: 90vh

	top: var(--top, var(--padding-medium))
	left: var(--left, var(--padding-medium))

	&[data-stretch='true'] {
		max-height: calc( 100vh - var(--top) - var(--padding-medium) )
	}
}

.body {
	box-shadow: inset 0px 0px 0px var(--shadow-height) rgba(255,255,255,.2)
	background: var(--background-color)
	border-radius: var(--border-radius)
	width: 100%
	height: 100%
}

//extension specific
html:global(.extension)[data-popover-showing='true'] [data-is-page] {
	min-height: 600px
}