.body {
	z-index: 999;
	background: var(--background-color)
	box-shadow: 0px 0px 0px var(--shadow-height) var(--shadow-color), 0px 20px 50px 0px var(--shadow-color);
	border-radius: 2px;
	position: fixed;
	max-width: 90%
	max-height: 90%
	overflow-y: auto
	overflow-y: overlay
}

@supports (backdrop-filter: none) {
	.body {
		background: unquote('hsla(var(--background-hsl), .85)')
		backdrop-filter: blur(10px)
	}
}