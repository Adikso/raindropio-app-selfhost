.modal {
    position: fixed
    z-index: 888
    left: 0
    top: 0
    bottom: 0
    right: 0
    background: rgba(0,0,0,.35)
    display: flex
    align-items: center
    justify-content: center

    &.important {
        z-index: 99999999
    }
}

.wrap {
    max-width: 90%  
    max-height: 90%
    border-radius: var(--border-radius)
    box-shadow: 
        0px 0px 0px var(--shadow-height) var(--shadow-color),
		0 4.5px 10.2px rgba(0, 0, 0, 0.057),
        0 11.3px 25.7px rgba(0, 0, 0, 0.074),
        0 23px 52.5px rgba(0, 0, 0, 0.087),
        0 47.5px 108px rgba(0, 0, 0, 0.106),
        0 130px 296px rgba(0, 0, 0, 0.18);
    overflow: hidden

    &[data-stretch] {
        width: max(50%, 500px)
        height: 90%
    }
}

.body {
    background: var(--background-color)
    display: flex
    flex-direction: column
    width: 100%
    height: 100%
}

@supports (backdrop-filter: none) {
	.body {
		background: unquote('hsla(var(--background-hsl), .85)')
		backdrop-filter: blur(20px)
	}
}