.modal {
    position: fixed
    z-index: 888
    left: 0
    top: 0
    bottom: 0
    right: 0
    background: rgba(0,0,0,.35)
    display: flex
    align-items: center
    justify-content: center

    &.important {
        z-index: 99999999
    }
}

.wrap {
    max-width: 90%  
    max-height: 90%
    border-radius: var(--border-radius)
    box-shadow: 
        0px 0px 0px var(--shadow-height) var(--shadow-color),
		0 5.4px 3.4px rgba(0, 0, 0, 0.017),
		0 15px 9.4px rgba(0, 0, 0, 0.025),
		0 36.2px 22.6px rgba(0, 0, 0, 0.033),
		0 120px 75px rgba(0, 0, 0, 0.05);
    overflow: hidden

    &[data-stretch] {
        width: max(50%, 500px)
        height: 90%
    }
}

.body {
    background: var(--background-color)
    display: flex
    flex-direction: column
    width: 100%
    height: 100%
}

@supports (backdrop-filter: none) {
	.body {
		background: unquote('hsla(var(--background-hsl), .8)')
		backdrop-filter: blur(20px)
	}
}