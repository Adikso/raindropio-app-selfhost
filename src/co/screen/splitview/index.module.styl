.splitview {
    width: 100vw;
    height: 100vh;
    display: grid;
    grid-template-columns: minmax(350px, 35vw) minmax(calc(100vw - 350px), 65vw);
    grid-template-rows: 100vh;
    grid-template-areas: 'main main';
    grid-auto-rows: 0;
    overflow-y: hidden;
}

/* Areas */
.sidebar {
    grid-area: sidebar;
}

.main {
    grid-area: main;
}

.reader {
    grid-area: reader;
    justify-self: stretch;
}

/* Sidebar specific elements */
.sidebar, .sidebarBackdrop {
    z-index: 20;
}

.sidebarCloseButton {
    display: none
}

.showReader .sidebarShowButton {
    display: none
}

/* Full screen reader, always on top of all other */
.showReader.showReaderFullscreen {
    grid-template-columns: 100vw !important;
    grid-template-areas: 'reader' !important
}

@media screen and (max-width: 599px) {
    /* sidebar + main */
    .showSidebar:not(.showReader).forceSidebar .sidebar {
        grid-row: 1;
        grid-column: 1;
    }

    .showSidebar:not(.showReader).forceSidebar .sidebarBackdrop {
        grid-row: 1;
        grid-column: 2;
    }

    .showSidebar:not(.showReader).forceSidebar .sidebarCloseButton {
        display: block
    }

    /* any combination, reader always on top */
    .showReader {
        grid-template-columns: 100vw !important;
        grid-template-areas: 'reader' !important;
    }
}

@media screen and (min-width: 600px) and (max-width: 1000px) {
    /* sidebar + main + reader */
    .showSidebar.showReader.forceSidebar {
        grid-template-areas: 'sidebar main';
    }

    .showSidebar.showReader.forceSidebar .sidebarBackdrop {
        grid-row: 1;
        grid-column: 2;
    }

    .showSidebar.showReader.forceSidebar .sidebarCloseButton {
        display: block
    }
}

@media screen and (min-width: 600px) {
    /* sidebar + main */
    .showSidebar:not(.showReader) {
        grid-template-columns: minmax(200px, var(--sidebar-width)) minmax(50vw, 1fr);
        grid-template-areas: 'sidebar main'
    }

    /* main + reader */
    .showReader {
        grid-template-areas: 'main reader';
    }
}

@media screen and (min-width: 1001px) {
    /* sidebar + main + reader */
    .showSidebar.showReader {
        grid-template-columns: minmax(200px, var(--sidebar-width)) minmax(350px, 30vw) auto;
        grid-template-areas: 'sidebar main reader'
    }
}