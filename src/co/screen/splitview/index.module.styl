.splitview {
    --sidebar-width: unquote('max(200px, min(var(--preferred-sidebar-width, 270px), 40vw))');

    width: 100vw;
    height: 100vh;
    display: grid;
    grid-template-columns: minmax(200px, var(--sidebar-width)) 0px .5fr 1fr 1.5fr;
    grid-template-rows: 100vh;
    grid-template-areas: 'main main main main main';
    grid-auto-rows: 0;
    grid-auto-columns: 0;
    overflow-y: hidden;
}

/* Areas */
:global(.svSidebar) {
    grid-area: sidebar;
}

:global(.svSidebarResize) {
    grid-area: sidebar-resize;
}

:global(.svSidebarBackdrop) {
    grid-area: sidebar-backdrop;
}

:global(.svMain) {
    grid-area: main;
    min-width: unquote('min(380px, 40vw)')
}

:global(.svReader) {
    grid-area: reader;
    justify-self: stretch;
}

/* Sidebar specific elements */
:global(.svSidebar), :global(.svSidebarResize), :global(.svSidebarBackdrop) {
    z-index: 20;
}

:global(.svSidebarCloseButton) {
    display: none
}

.showReader :global(.svSidebarShowButton) {
    display: none
}

/* Full screen reader, always on top of all other */
.showReader.showReaderFullscreen {
    grid-template-areas: 'reader reader reader reader reader' !important
}

@media screen and (max-width: 599px) {
    :global(.show-on-small-body) {
        display: block
    }
    :global(.hide-on-small-body) {
        display: none
    }

    /* sidebar + main */
    .showSidebar:not(.showReader).forceSidebar :global(.svSidebar) {
        grid-row: 1;
        grid-column: 1;
    }

    .showSidebar:not(.showReader).forceSidebar :global(.svSidebarBackdrop) {
        grid-row: 1;
        grid-column: 3 / -1;
    }

    .showSidebar:not(.showReader).forceSidebar :global(.svSidebarCloseButton) {
        display: block
    }

    /* any combination, reader always on top */
    .showReader {
        grid-template-areas: 'reader reader reader reader reader' !important;
    }
}

@media screen and (min-width: 600px) and (max-width: 1000px) {
    .showSidebar, .showReader {
        :global(.show-on-small-body) {
            display: block
        }
        :global(.hide-on-small-body) {
            display: none
        }
    }

    /* sidebar + main + reader */
    .showSidebar.showReader.forceSidebar {
        grid-template-areas: 'sidebar main main main main';
    }

    .showSidebar.showReader.forceSidebar :global(.svSidebarBackdrop) {
        grid-row: 1;
        grid-column: 3 / -1;
    }

    .showSidebar.showReader.forceSidebar :global(.svSidebarCloseButton) {
        display: block
    }
}

@media screen and (min-width: 600px) {
    /* sidebar + main */
    .showSidebar:not(.showReader) {
        grid-template-areas: 'sidebar sidebar-resize main main main'
    }

    /* main + reader */
    .showReader {
        grid-template-areas: 'main main main reader reader';
    }
}

@media screen and (min-width: 1001px) {
    .showSidebar.showReader :global(.svMain) {
        :global(.show-on-small-body) {
            display: block
        }
        :global(.hide-on-small-body) {
            display: none
        }
    }

    /* sidebar + main + reader */
    .showSidebar.showReader {
        grid-template-areas: 'sidebar sidebar-resize main reader reader'
    }
}

@media screen and (min-width: 1001px) and (max-width: 1300px) {
    .showSidebar.showReader :global(.svReader) {
        :global(.show-on-small-body) {
            display: block
        }
        :global(.hide-on-small-body) {
            display: none
        }
    }
}

@media screen and (min-width: 1301px) {
    :global(.svReader) {
        :global(.show-on-small-body) {
            display: none
        }
        :global(.hide-on-small-body) {
            display: block
        }
    }
}