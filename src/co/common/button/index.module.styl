.button {
    user-select: none
    appearance: none !important
    background: transparent
    border: 0
    height: var(--button-height)
    padding: 0 var(--padding-small)
    display: inline-grid
    grid-auto-flow: column
    gap: var(--padding-small)
    align-items: center
    justify-content: start
    border-radius: var(--border-radius)
    font-size: var(--primary-font-size)
    cursor: pointer
    white-space: nowrap
    outline: none
    line-height: 2
    flex-shrink: 0
    transition: box-shadow 0.1s ease-in-out, background 0.1s ease-in-out

    > * {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        word-wrap: break-word
        pointer-events: none
    }
    
    select {
        border: 0
        box-shadow: none
        padding: 0 var(--padding-small)
        margin: 0 calc(var(--padding-small) * -1)
        pointer-events: initial
        background: transparent
        min-width: 0
    }

    &[disabled] {
        pointer-events: none
        cursor: default
    }

    &[data-block] {
        display: grid
        width: 100%
        justify-content: center
    }
}

//default
.button[data-variant='default'] {
    font-weight: normal
    color: var(--primary-text-color)

    &[disabled] {
        color: var(--disable-text-color)
    }

    &:hover {
        background: var(--hover-background-color)
    }

    &:active {
        background: var(--active-background-color)
    }

    &:focus {
        box-shadow: inset 0 0 0 1px var(--accent-color)
    }
}

//link like
.button[data-variant='link'] {
    font-weight: 500
    color: var(--accent-color)

    &[disabled] {
        color: var(--disable-text-color)
    }

    &:hover {
        background: var(--hover-background-color)
    }

    &:active {
        background: var(--active-background-color)
    }

    &:focus {
        box-shadow: inset 0 0 0 1px var(--accent-color)
    }
}

//outline
.button[data-variant='outline'] {
    background: var(--background-color)
    color: var(--primary-text-color)
    box-shadow: inset 0 0 0 var(--shadow-height) var(--shadow-color), inset 0 calc(var(--shadow-height) * -1) 0 rgba(0,0,0,.15)

    &[disabled] {
        box-shadow: none
        background: var(--disable-background-color)
        color: var(--disable-text-color)
    }

    &:hover:not(:active) {
        box-shadow: inset 0 0 0 var(--shadow-height) var(--disable-text-color), 0 var(--shadow-height) 0 rgba(0,0,0,.1)
    }

    &:active {
        background: var(--active-background-color)
    }

    &:focus {
        box-shadow: inset 0 0 0 1px var(--accent-color)
    }
}

//flat
.button[data-variant='flat'] {
    background: var(--alternative-background-color)
    color: var(--primary-text-color)

    &[disabled] {
        background: var(--disable-background-color)
        color: var(--disable-text-color)
    }

    &:hover {
        background: var(--hover-background-color)
    }

    &:active {
        background: var(--active-background-color)
    }

    &:focus {
        box-shadow: inset 0 0 0 1px var(--accent-color)
    }
}

//primary
.button[data-variant='primary'] {
    background: var(--accent-color)
    color: unquote('hsl(var(--background-hsl))')
    font-weight: 500

    &[disabled] {
        background: var(--disable-background-color)
        color: var(--disable-text-color)
    }

    &:hover {
        filter: brightness(1.1);
    }

    &:active {
        filter: brightness(.9);
    }

    &:focus {
        box-shadow: inset 0 0 0 1px var(--accent-color), inset 0 0 0 2px currentColor
    }
}

//active
.button[data-variant='active'] {
    background: unquote('hsla(var(--accent-hsl), .1)');
    color: var(--accent-color)
    font-weight: 500
    pointer-events: none

    &[disabled] {
        background: var(--disable-background-color)
        color: var(--disable-text-color)
    }
}

//small
.button[data-size='small'] {
    line-height: 1
    --button-height: var(--icon-size)
}