.button {
    user-select: none
    appearance: none !important
    border: 0
    height: var(--button-height)
    padding: 0 var(--padding-small)
    display: inline-grid
    grid-auto-flow: column
    gap: var(--padding-small)
    align-items: center
    justify-content: start
    border-radius: var(--border-radius)
    font-size: var(--primary-font-size)
    cursor: pointer
    flex-shrink: 0
    outline: none

    > * {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        word-wrap: break-word
        pointer-events: none
    }

    &[disabled] {
        pointer-events: none
        cursor: default
    }

    &[data-block] {
        display: grid
        width: 100%
        justify-content: center
    }
}

//default
.button[data-variant='default'] {
    color: var(--primary-text-color)

    &[disabled] {
        color: var(--disable-text-color)
    }

    &:hover {
        background: var(--hover-background-color)
    }

    &:active {
        background: var(--active-background-color)
    }

    &:focus {
        box-shadow: 0 0 0 1px var(--accent-color)
    }
}

//link like
.button[data-variant='link'] {
    font-weight: 500
    color: var(--accent-color)

    &[disabled] {
        color: var(--disable-text-color)
    }

    &:hover {
        background: var(--hover-background-color)
    }

    &:active {
        background: var(--active-background-color)
    }

    &:focus {
        box-shadow: 0 0 0 1px var(--accent-color)
    }
}

//outline
.button[data-variant='outline'] {
    background: var(--background-color)
    color: var(--primary-text-color)
    box-shadow: inset 0 0 0 var(--shadow-height) var(--shadow-color), inset 0 calc(var(--shadow-height) * -1) 0 var(--shadow-color)

    &[disabled] {
        background: var(--disable-background-color)
        color: var(--disable-text-color)
    }

    &:hover:not(:active) {
        --shadow-color: var(--secondary-text-color)
    }

    &:active {
        background: var(--active-background-color)
    }

    &:focus {
        box-shadow: 0 0 0 1px var(--accent-color)
    }
}

//flat
.button[data-variant='flat'] {
    background: var(--alternative-background-color)
    color: var(--primary-text-color)

    &[disabled] {
        background: var(--disable-background-color)
        color: var(--disable-text-color)
    }

    &:hover {
        background: var(--hover-background-color)
    }

    &:active {
        background: var(--active-background-color)
    }

    &:focus {
        box-shadow: 0 0 0 1px var(--accent-color)
    }
}

//primary
.button[data-variant='primary'] {
    background: var(--accent-color)
    color: white
    font-weight: 500

    &[disabled] {
        background: var(--disable-background-color)
        color: var(--disable-text-color)
    }

    &:hover {
        filter: brightness(1.1);
    }

    &:active {
        boxShadowClick()
        filter: brightness(.9);
    }

    &:focus {
        box-shadow: 0 0 0 1px var(--accent-color), inset 0 0 0 1px currentColor
    }
}