.highlight {
    border-left: 2px solid var(--highlight-color, #ffee00);
    padding: 0 var(--padding-small);
    margin: var(--padding-mini) 0;

    display: -webkit-box
    line-clamp: 5
    -webkit-line-clamp: 5
    -webkit-box-orient: vertical
    overflow: hidden
    overflow: clip
    white-space: pre
    white-space: pre-wrap

    .note {
        margin-left: var(--padding-small)
    }
}