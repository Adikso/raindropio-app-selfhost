.element {
    background: var(--background-color)
    position: relative
    overflow: hidden
    
    &.broken {
        .title, p {
            opacity:.7
        }
        
        .title {
            text-decoration:line-through
        }
    }

    &:hover {
        .select, .actions {
            display: flex
        }

        .permalink {
            background: var(--hover-background-color)
        }
    }
    
    &.active {
        --background-color: var(--active-background-color);
    }

    &.checked .permalink {
        background-color: unquote('hsla(var(--accent-hsl), .1)');
    }

    &.isDragging {
        .actions {
            display: none
        }
    }
    
    &.isDragging {
        box-shadow: 0 1px 3px rgba(0,0,0,.1), 0 3px 15px rgba(0,0,0,.1);
        border-radius: var(--border-radius)
    }

    &:focus-within:not(.selectModeEnabled) {
        --background-color: var(--accent-color)
        color: unquote('hsl(var(--background-hsl))')
        --primary-text-color: unquote('hsla(var(--background-hsl), .8)')
        --secondary-text-color: unquote('hsla(var(--background-hsl), .6)')
        --shadow-color: var(--accent-color)

        .description {
            --accent-color: unquote('hsl(var(--background-hsl))')
        }
    }
}

.dragGhost {
    position: absolute
    top: -100vh
    left: -100vw
    transform: scale(0.5)
    overflow: hidden
    zoom: 0.5
    max-width: 300px
    max-height: 300px
    border-radius: calc(var(--border-radius) * 2)
}

//About
.about {
    flex: 1
    display: grid
    grid-auto-flow: row
    align-content: flex-start
    gap: calc(var(--padding-mini) / 2)

    em {
        font-weight: 600
        font-style: normal
    }

    .title {
        font-weight: 500
        font-size: var(--title-font-size)
    }

    .description {
        display: flex
        flex-direction: column
        font-size: var(--primary-font-size)
        overflow: hidden
        color: var(--primary-text-color)

        &:empty {
            display: none
        }

        .body {
            border-left: 2px solid var(--accent-color);
            padding: 2px var(--padding-small);

            &:after {
                content: 'â€¦'
            }
        }
    }

    .title, .excerpt {
        display: -webkit-box;
        line-clamp: 5;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;  
        overflow: hidden;
        white-space: pre;
        white-space: pre-wrap;
    }
}

//Select
.select {
    position: absolute;
    z-index: 1;
    //transition: opacity .1s ease-in-out;
    left:0;
    top:0;
    background: inherit
    width: var(--padding-large)
    height: var(--padding-large)
    display: none
    align-items: center
    justify-content: center
    border-bottom-right-radius: var(--border-radius)
    box-shadow: var(--shadow-height) var(--shadow-height) 0 var(--shadow-color)
}

.selectModeEnabled {
    .select {
        display: flex !important;
    }
    .actions {
        display: none !important;
    }
}

//Actions
.actions {
    position: absolute
    z-index: 1
    right: var(--padding-medium)
    top: var(--padding-medium)
    display: inline-grid
    grid-auto-flow: column
    gap: var(--padding-small)
    justify-content: start
    display: none
    //transition: opacity .1s linear
}

//View specific
.list, .simple {
    display: grid
    grid-template-columns: auto 1fr
    gap: var(--padding-medium)
    padding: var(--padding-medium)

    &:before {
        content: ''
        position: absolute
        left: var(--padding-medium)
        bottom: 0
        right: 0
        height: 1px
        box-shadow: inset 0 calc(var(--shadow-height) * -1) 0 var(--shadow-light-color)
    }

    &.dragGhost {
        max-width: 500px
    }
}

:global(.list-cover-right) .list {
    grid-template-columns: 1fr auto
}

.simple {
    .excerpt {
        display: none
    }
}

.grid, .masonry {
    display: flex
    flex-direction: column
    border-radius: var(--border-radius)
    
    .about {
        padding: calc(var(--padding-medium) - var(--padding-mini))
    }

    .title, .excerpt {
        line-clamp: 3;
        -webkit-line-clamp: 3;
    }

    .select {
        border-top-left-radius: var(--border-radius)
        box-shadow: inset 0 0 0 var(--shadow-height) var(--shadow-color)
    }

    .permalink {
        box-shadow: inset 0 0 0 var(--shadow-height) var(--shadow-color)
        border-radius: calc(var(--border-radius) + 1px)
    }
}

.masonry {
    margin: var(--padding-small)
}

//Hide
:global(.hide-title) {
    .title {
        display: none
    }
}

:global(.hide-excerpt) {
    .excerpt {
        display: none
    }
}

:global(.hide-info) {
    .info {
        display: none
    }
}

:global(.hide-title.hide-excerpt.hide-tags.hide-info) {
    .grid, .masonry {
        .about {
            display: none
        }
    }
}