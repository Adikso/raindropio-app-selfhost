@require "../consts.styl"

.elements-header {
    position: sticky
    top: 0
    z-index: 99
    box-shadow: 0px 1px 0px subSeparatorColorAlpha

    .header {
        background: white
        display: flex
        align-items: center
        padding-left: (baseHorizontalGap / 2)
        min-height: 48px

        .c-icon {
            margin-left: (baseHorizontalGap / 2)
        }

        .title {
            padding-left: (baseHorizontalGap / 2)
            font-weight: 500
            font-size: 16px
            @extend .text-overflow
            overflow: visible

            a {
                color: currentColor
                &:hover {
                    text-decoration: underline
                }
            }
        }

        .space {
            min-width: 0
            flex: 1
        }
    }
}

.selected-all-badge {
    background: var(--accentColor)
    color: white
    padding: 4px 6px
    margin-left: -4px
    border-radius: 3px
}