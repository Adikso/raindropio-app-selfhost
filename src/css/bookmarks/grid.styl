@require "../consts.styl";
@require "../buttons.styl";

gridItemGap = 8px;
gridItemPaddingHorizontal = rem(11px);
gridItemBorder = 3px;

.view-grid, .view-masonry {
    display: grid
    grid-template-columns: repeat(var(--grid-columns, 1), minmax(0, 1fr))
    column-gap: gridItemGap * 2
    padding: 0 gridItemGap * 2
    padding-top: gridItemGap * 2
    width: 100%
    height: 100%

    .section {
        align-items: center
        justify-content: center
    }

    .element {
        display: flex;
        flex-direction: column;
        border-radius: 3px;
        //box-shadow: 0px 1px 0px subSeparatorColor, 1px 0 0px subSeparatorColor, inset 1px 0 0px subSeparatorColor;
            
        .selectElement {
            left: 0;
            top: 0;
        }
            
        .cover-wrap {
            background: white;
            //background: lighten(sidebarBackground,2%);
            position: relative;
            overflow: hidden;
            border-top-left-radius: 2px; 
            border-top-right-radius: 2px;
            padding-top: 56.25%; //16x9 aspect-ratio
            
            /*&:before {
                position: absolute;
                left: 0;right:0;bottom:0;
                height:1px;
                box-shadow: inset 0px 1px 0px rgba(0,0,0,.1);
                content: "";
            }*/
        }

        .cover {
            width: 100%;
            height: auto;
            position: absolute;
            top: 0; right:0; bottom: 0; left: 0;
            object-fit: initial;

            border-top-left-radius: 2px;
            border-top-right-radius: 2px;
            border-bottom-left-radius: 0;
            border-bottom-right-radius: 0;
           

            &.cover-placeholder {
                .full-size {
                    display: block;
                    font-size: 21px;
                    font-weight: lighten;
                }
            }
        }
            
        .permalink {
            border-radius: 2px;
            box-shadow: inset 0px 0px 0px 1px rgba(0,0,0,0.15), inset 0px -1px 0px rgba(0,0,0,0.05), 0px 1px 0px rgba(0,0,0,.05);
        }

        .about {
            padding: rem(10px) gridItemPaddingHorizontal;
            flex: 1;
            //box-shadow: 0px -1px 0px subSeparatorColorAlpha;

            .info {
                margin-top: rem(1px);
                
            }
            
            .title {
                margin-top: rem(-3px);
            }
        }

        .actions {
            z-index: 1
            position: absolute
            right: gridItemGap
            top: gridItemGap
            
            .action-small {
                position: relative;

                &:before {
                    position: absolute;
                    content: "";
                    left:10%;right:10%;bottom:20%;top:20%;
                    border-radius: 2px;
                    background: white;
                    z-index: -1;
                    box-shadow: 0px 0px 0px 1px rgba(0,0,0,.1), 0px 1px 0px rgba(0,0,0,.16);
                }
            }
        }

        .titleDesc {
            overflow: hidden;
            height: 60px;
        }
        
        .about.dark {
            box-shadow: none;
            /*position: absolute;
            bottom:gridItemGap;right:gridItemGap;left:gridItemGap;*/
            background: darkBackground;
            
            .info-important {
                color: white;
            }
                
            .info {
                color: rgba(255,255,255,.6);
            }
            
            .actions .button:not(.active) {
                color: rgba(0,0,0,0.5);
            }
        }
    }
}

.hide-title.hide-excerpt.hide-tags.hide-info {
    .view-grid, .view-masonry {
        .about {
            padding: 0
        }
    }
}

.main-gray-background, .mode-reader #markup:not(.themeDark) {
    .view-grid, .view-masonry {
        .element {
            border-color: gridBackground;
        }
    }
}

html.retina.chrome {
    .view-grid, .view-masonry {
        .element {
            &:not(.active) .permalink {
                box-shadow: inset 0px 0px 0px 0.5px rgba(0,0,0,0.25), inset 0px -0.5px 0px rgba(0,0,0,.1);
            }
            
            .cover-wrap:before {
                box-shadow: inset 0px 0.5px 0px rgba(0,0,0,.13);
            }
        }
    }
}



.view-masonry {
    .element {
        .cover-wrap {
            padding: 0
        }

        .cover {
            position: static
        }
    }
}

.themeDark {
    .view-grid, .view-masonry {
        .element {
            border-color: darkBackground;
            
            .cover-wrap {
                background: darken(darkBackground,10%);
            }
            
            .permalink {
                box-shadow: none !important;
            }
            
            .about {
                background: lighten(darkBackground, 5%);
                
                .actions .button {
                    color: rgba(255,255,255,.5) !important;
                    box-shadow: none;
                    
                    &:before {
                        background: rgba(darkBackground,.9);
                    }
                }
            }
            
            &.active {
                background: var(--accentColor) !important;
            }
        }
    }
}

.virtuoso-grid {
    height: 100%
}

.virtuoso-grid-list {
    display: grid
	grid-template-columns: repeat(var(--virtuoso-columns, 2), 1fr)
	grid-auto-rows: 300px
}

.virtuoso-grid-item {
    overflow: hidden
}