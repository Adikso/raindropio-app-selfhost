@require "../consts.styl";
@require "../buttons.styl";

originalCoverWidth = 200px;
originalCoverGap = 50px;
gridItemGap = 8px;
gridItemPaddingHorizontal = rem(11px);
gridItemBorder = 3px;

.view-grid {
    //align-items: flex-start;
}

.view-grid, .view-masonry, .view-masonry-container {
    //min-height: calc(100vh - 48px - 38px);
        
    .section {
        //box-shadow:none;
        margin: gridItemGap (gridItemGap * -1);
        //margin-bottom: (gridItemGap - gridItemBorder - 1);
        //padding-bottom:0;
        
        .quickFiltersOverlay {
            margin-right: (gridItemGap * -1 * 2);
        }
        
        &:first-child {
            margin-top: (gridItemGap * -1);
        }
    }
}

.virtuoso-grid-list {
    display: flex;
  flex-wrap: wrap;
}

.virtuoso-grid-item {
    width: 25%
}

.element.element-grid {
    display: flex;
    flex-direction: column;
    padding: gridItemBorder;
    min-width: 100%;
    min-height: 100%;
    border: (gridItemGap - (gridItemBorder)) solid white;/*gridBackground*/
    border-radius: gridItemGap;
    //box-shadow: 0px 1px 0px subSeparatorColor, 1px 0 0px subSeparatorColor, inset 1px 0 0px subSeparatorColor;
        
    .selectElement {
        left: gridItemBorder;
        top: gridItemBorder;
    }
        
    .cover-wrap {
        background: white;
        //background: lighten(sidebarBackground,2%);
        position: relative;
        overflow: hidden;
        border-top-left-radius: 2px; 
        border-top-right-radius: 2px;
        padding-top: 56.25%; //16x9
        
        .cover-over {
            position: absolute;
            left: 0;right:0;bottom:0;top:0;
            content: "";
            opacity:.15;
        }
        
        /*&:before {
            position: absolute;
            left: 0;right:0;bottom:0;
            height:1px;
            box-shadow: inset 0px 1px 0px rgba(0,0,0,.1);
            content: "";
        }*/
    }
        
    .permalink {
        border-radius: 2px;
        box-shadow: inset 0px 0px 0px 1px rgba(0,0,0,0.15), inset 0px -1px 0px rgba(0,0,0,0.05), 0px 1px 0px rgba(0,0,0,.05);
        left:gridItemBorder;top:gridItemBorder;right:gridItemBorder;bottom:gridItemBorder;
    }

    
    .about.dark {
        box-shadow: none;
        /*position: absolute;
        bottom:gridItemGap;right:gridItemGap;left:gridItemGap;*/
        background: darkBackground;
        
        .info-important {
            color: white;
        }
            
        .info {
            color: rgba(255,255,255,.6);
        }
        
        .actions .button:not(.active) {
            color: rgba(0,0,0,0.5);
        }
    }
    
    &.active[data-is-focus="true"] {
        .cover {
            border-radius: 0;
        }
        .permalink {
            box-shadow:none;
        }
    }
}
.main-gray-background, .mode-reader #markup:not(.themeDark) {
    .element.element-grid {
        border-color: gridBackground;
    }
}

html.retina.chrome .element.element-grid {
    &:not(.active) .permalink {
        box-shadow: inset 0px 0px 0px 0.5px rgba(0,0,0,0.25), inset 0px -0.5px 0px rgba(0,0,0,.1);
    }
    
    .cover-wrap:before {
        box-shadow: inset 0px 0.5px 0px rgba(0,0,0,.13);
    }
}

.element.element-grid .cover {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0; right:0; bottom: 0; left: 0;
    border-top-left-radius: 2px;
    border-top-right-radius: 2px;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;

    &.cover-scale-down {
        //object-position: gridItemPaddingHorizontal calc(100% - 11px);
    }
    
    &.cover-placeholder {
        .full-size {
            display: block;
            font-size: 21px;
            font-weight: lighten;
        }
    }
}

.element-grid .about {
    padding: rem(10px) gridItemPaddingHorizontal;
    flex: 1;
    border-bottom-left-radius: 2px;
    border-bottom-right-radius: 2px;
    //box-shadow: 0px -1px 0px subSeparatorColorAlpha;
    background: white;

    .info {
        margin-top: rem(1px);
        
    }
    
    .title {
        margin-top: rem(-3px);
    }
}

.element-grid .actions {
    position: absolute;
    right: gridItemGap
    top: gridItemGap
    
    .button.active b {
        background: colorTheme;
        background: val(--accentColor, colorTheme);
        backdrop-filter: blur(10px);
    }
    
    .action-small {
        position: relative;

        &:before {
            position: absolute;
            content: "";
            left:10%;right:10%;bottom:20%;top:20%;
            border-radius: 2px;
            background: white;
            z-index: -1;
            box-shadow: 0px 0px 0px 1px rgba(0,0,0,.1), 0px 1px 0px rgba(0,0,0,.16);
        }
    }
}

.element-grid .titleDesc {
    overflow: hidden;
    height: 60px;
}


.view-masonry, .view-masonry-container {
    padding-top: 0;
    margin-top: -10px;
    .element-grid {
        .cover {
            height: auto !important;
            object-fit: cover !important;
            object-position: top center;
        }
    }
}



.themeDark {
    .element.element-grid {
        border-color: darkBackground;
        
        .cover-wrap {
            background: darken(darkBackground,10%);
        }
        
        .permalink {
            box-shadow: none !important;
        }
        
        .about {
            background: lighten(darkBackground, 5%);
            
            .actions .button {
                color: rgba(255,255,255,.5) !important;
                box-shadow: none;
                
                &:before {
                    background: rgba(darkBackground,.9);
                }
            }
        }
        
        &.active {
            background: var(--accentColor) !important;
        }
    }
}




.mode-disable-title .element.element-grid {
    .about {
        padding: 0;
        .title, .info {
            display: none;
        }
    }
    
    .cover-wrap {
        border-radius: 2px;
        background: transparent;
    }
    
    /*&:not(.active) .permalink {
        box-shadow: none !important;
    }*/
}