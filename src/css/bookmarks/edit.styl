.bookmarkEdit {
	width: 100%
	max-width: 500px
	margin: 0 auto
	padding: 0 16px
	display: flex

	.edit-cover {
		display: block
		margin-top: 16px
		position: relative
		overflow: hidden
		color: white

		.edit-cover-more {
			position: absolute
			bottom: 0
			right: 0
			background: var(--accentColor, colorTheme)
			border-top-left-radius: 4px
			border-bottom-right-radius: 2px
			width: 20px
			height: 20px
		}

		&:before {
			position: absolute
			left:0; top: 0; bottom: 0; right: 0;
			content: ''
			box-shadow: inset 0 0 0 1px rgba(0,0,0,.1)
			border-radius: 2px
		}
	}

	.edit-form {
		flex: 1

		.fieldWrap {
			margin-top:0
		}
	}
}