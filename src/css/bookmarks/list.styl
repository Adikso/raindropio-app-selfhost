@require "../consts.styl";

.view-list, .view-simple {
    .element {
        display: flex;
        align-items: center;
        padding: baseHorizontalGap;
        position: relative;

        .selectElement {
            top: 1px
            left: 0
        }

        &:after {
            content: "";
            position: absolute;
            right: 0;
            bottom: 0;
            left: 0;
            box-shadow: inset 0 -1px 0 rgba(0,0,0,.07);
            z-index:1;
            height: 1px;
        }

        .cover-wrap {
            flex-shrink: 0;
            position:relative;
            align-self: flex-start
        }
        
        .cover {
            margin-right: 16px;
        }

        .about {
            min-width:0
            flex: 3
        }

        .info-wrap {
            display: flex;

            .info-path {
                &:after {
                    margin:0 8px;
                    content: 'Â·';
                }
            }
        }

        .info {
            @extend .text-overflow
            text-align: left
        }
        
        .actions {
            margin: 0;
            position: absolute;
            right: 0px;
            top:1px;
            bottom:1px;
            background: inherit;
            padding: 12px baseHorizontalGap;
            
            .button {
                position: relative;
                z-index:1;
            }
        }

        &:hover, &.active {
            .actions:before {
                position: absolute;
                left:-24px;
                top:20%;
                bottom:20%;
                width: 80px;
                background: inherit;
                content: "";
                filter: blur(10px);
                pointer-events: none;
                z-index:0;
            }
        }
    }
}

.view-simple {
    .about {
        .description {
            display: none;
        }
    }
}