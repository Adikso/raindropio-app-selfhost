@require "consts.styl";

@keyframes preloaderDash{
	0%{
		stroke-dasharray: 1,200;
		stroke-dashoffset: 0;
	}
	50%{
		stroke-dasharray: 89,200;
		stroke-dashoffset: -35px;
	}
	100%{
		stroke-dasharray: 89,200;
		stroke-dashoffset: -124px;
	}
}

.preloader {
	position: relative;
	margin: 0px auto;
	width: 40px;
	display: inline-block;
	border-radius: 50%;

	&:before {
		content:'';
		display: block;
		padding-top: 100%;
	}

	.preloaderCircular {
		animation: rotate 1s linear infinite;
		height: 100%;
		transform-origin: center center;
		width: 100%;
		position: absolute;
		top: 0; bottom: 0; left: 0; right: 0;
		margin: auto;
	}

	.preloaderPath {
		stroke-dasharray: 1,200;
		stroke-dashoffset: 0;
		animation: preloaderDash 1.5s ease-in-out infinite;
			stroke-dasharray: 89,200;
		stroke-dashoffset: -35px;
		stroke-linecap: square;
		stroke-width: 2px;
		stroke-miterlimit: 10px;
		stroke: colorTheme;
		stroke: var(--accentColor, colorTheme);
		transition: stroke .2s ease-in-out;
	}

	&.size-icon {
		width: 20px
		
		.preloaderPath {
			stroke-width: 3px;
		}
	}
	
	&.size-small {
		width: 24px;
		
		.preloaderPath {
			stroke-width: 3px;
		}
	}
}