@require "./consts.styl"

.modal {
    position: fixed
    z-index: 888
    left: 0
    top: 0
    bottom: 0
    right: 0
    background: rgba(0,0,0,.2)
    display: flex
    align-items: center
    justify-content: center
}

.modal-body {
    background: white
    max-width: 90%  
    max-height: 90%
    border-radius: 3px
    box-shadow: 0px 0px 0px 1px rgba(0,0,0,0.14), 0px 20px 90px 0px rgba(0,0,0,0.4)

    display: flex
    flex-direction: column

    &[data-stretch] {
        width: max(50%, 500px)
        height: 90%
    }
}

.modal header {
    display: flex
    align-items: center
    min-height: 48px
    padding: 0 16px

    .title {
        padding-right: 16px
        flex: 1
        font-weight: 500
        font-size: rem(16px)
        @extend .text-overflow;
    }

    .modal-close {
        margin-right: -16px
    }
}

.modal-content {
    flex: 1
    overflow-y: overlay
    position: relative

    &[data-indent] {
        padding: 16px
        padding-top: 0
    }
}