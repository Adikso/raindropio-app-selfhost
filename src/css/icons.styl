.svgIcon {
	display: inline-block;

	svg {
		display:block;
		fill: currentColor;
		width: 20px;height: 20px;
	}
	
	&.svgIcon-size-micro svg, &.svgIcon-size-micro {
		width: 10px; height: 10px;
	}

	&.svgIcon-size-16 svg, &.svgIcon-size-16 {
		width: 16px; height: 16px;
	}

	&.svgIcon-size-20 svg, &.svgIcon-size-20 {
		width: 20px; height: 20px;
	}
	
	&.svgIcon-size-24 svg, &.svgIcon-size-24 {
		width: 24px; height: 24px;
	}
	
	&.svgIcon-size-48 svg, &.svgIcon-size-48 {
		width: 48px; height: 48px;
	}
	
	&.svgIcon-size-60 svg, &.svgIcon-size-60 {
		width: 60px; height: 60px;
	}
	
	&.svgIcon-size-80 svg, &.svgIcon-size-80 {
		width: 80px; height: 80px;
	}
	
	&.color-accent {
		color: colorTheme;
		color: var(--accentColor, colorTheme);
	}
	
	&.color-red {
		color: colorRed;
	}
	
	&.color-green {
		color: colorGreen;
	}
	
	&.color-yellow {
		color: colorYellow;
	}
	
	&.color-blue {
		color: colorBlue;
	}
	
	&.color-theme {
		color: colorTheme;
	}
}

svg #google path {
	&:nth-child(4) {
		fill:#00AC47;
	}
	&:nth-child(2) {
		fill:#FE2C25;
	}
	&:nth-child(3) {
		fill:#FFBA00;
	}
	&:nth-child(1) {
		fill:#2684FC;
	}
}