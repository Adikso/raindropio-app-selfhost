welcomeHorizontalGap = 30px;

.welcomePage {
	z-index: 2;
	max-width: 450px;
	padding-top: 30px;
	
	h1 {
		@extend .font-weight-light;
		font-size: 24px;
		margin:0;padding:0 welcomeHorizontalGap;
		margin-bottom: 10px;
	}

	.welcomeClipperImage {
		z-index: 3;
		position: relative;
	}
	
	.welcomeMessage {
		z-index: 3;
		position: relative;
		padding: 30px 0;
		padding-top: 26px;
		
		.welcomeFeatures {
			margin: 0 welcomeHorizontalGap;
		}
	}
	
	.welcomeFeatures, .welcomeFeatures li {
		list-style: none;
		padding: 0;
		margin: 0;
		text-align: left;
	}
	
	.welcomeFeatures {
		li {
			font-size: 14px;
			display: flex;
			align-items: center;
			
			.svgIcon {
				color: colorAsphalt;
			}

			.svgIcon svg {
				width: 30px;height: 30px;
			}
			
			p {
				color: black;
				margin: 12px 0;
				margin-left: 14px;
				opacity: .6;
			}
		}
	}
	
	.button.small {
		flex: 0;
		b {
			padding-left: 20px;
			padding-right: 20px;
		}
	}
	
	.additionalButtonWrap {
		border-top: 1px solid rgba(0,0,0,.1);
		padding: 0 welcomeHorizontalGap;
		padding-top: 50px;
		position: relative;
		z-index:10;
	}
}