@require "../consts.styl";

tabBarDefaultOpacity = .4;

#sidebar {
    left:0;
    width: sidebarWidth;
    width: var(--sidebarWidth, sidebarWidth);
    //max-width: 80%;
    background: sidebarBackground;
    --container-background: sidebarBackground;

    box-shadow: inset -1px 0px 0px separatorColor;
    z-index: 10;
    display: flex;
    flex-direction: column;
    transition: transform layoutTransitionSpeed ease-in-out, width layoutTransitionSpeed ease-in-out;

    > header {
        .headerWrap {
            height: headerHeight
            display: flex;
            align-items: center;
            padding-left: 21px;
            padding-right: 5px;
        }
        
        .sidebarHeaderTitle {
            flex:1;
            padding-bottom: 3px;
            color: inherit;
            
            .raindropLogo {
                margin-bottom: -3px;
            }
        }
    }

    > footer {
        padding: 12px 0px;
        
        .selectButton {
            margin: 2px 14px;
            font-size: 14px
            
            .fieldIcon {
                opacity: .6;
            }

            .fieldIcon:first-child {
                margin-left: 6px;
                margin-right: 8px;
            }
        }
    }

    .sidebarProLink {
        .collectionIcon {
            opacity:1;
            color: colorTheme;
        }   
        .title {
            font-weight: 500
        }
    }
    
    .proAccountBlock {
        background: rgba(255,255,255,.5);
        border-top: 0.5px solid separatorColor;
        font-size: 12px;
        color: inherit;
        margin-right:1px;
        overflow: hidden;
        position: relative;
        
        .title {
            padding: 12px 16px;
            padding-right: 70px;
            display:block;
            opacity: .6;
            
            .svgIcon {
                vertical-align: -2px;
                opacity: .6;
            }
            
            b {
                font-weight: 500
            }
        }
        
        .circles {
            color: white;
            min-width:0;
            position: absolute;
            top:-6px;right:0;
            width: 70px;
            display: flex;
            flex-wrap: wrap;
            transition: top .2s ease-in-out;
            //flex-direction: column;
            
            > span {
                width: 30px;height:30px;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                margin: 2px;
                border-radius:2px;
            }
            
            .tag {
                background: colorYellow;
            }
            
            .dropbox {
                background: #007ee5;
                margin-top: 10px;
            }
            
            .nested {
                background: colorRed;
                margin-top:-6px;
            }
            
            .upload {
                background: colorGreen;
            }
        }
        
        &:hover {
            .circles {
                top: -16px;
            }
        }
    }
    
    .tabBar {
        background: rgba(255,255,255,.3);
        margin-right:1px;
        border-top: 0.5px solid separatorColor;
        display: flex;
        align-items: center;
        height: 40px
        
        .item {
            flex: 1 1;
            width: 25%;
            color: black;
            opacity: tabBarDefaultOpacity;
            transition: color .2s ease-in-out, opacity .2s ease-in-out, background .2s ease-in-out;
            font-size: 10px
            text-align: center;
            
            .title {
                @extend .text-overflow;
                padding: 0 8px;
                opacity: 0;
                max-height: 0;
                transition: max-height .15s ease-in-out, opacity .15s ease-in-out;
                    
                span {
                    display: block;
                    margin-top: -3px;
                }
            }
            
            .svgIcon {
                display:block;
                margin: 0 auto;
            }
            
            &:not(.active) {
                &:hover, &:active  {
                    opacity: .6;
                    
                    .title {
                        max-height: 20px;
                        opacity: 1;
                    }
                }
            }
            
            &.active {
                opacity:1;
                color: colorTheme;
                color: var(--accentColor);
                position: relative;
                //animation: tabBarActiveAppear .2s ease-in-out;
                
                .title {
                    animation: tabBarTitleActiveAppear .2s ease-in-out;
                }
                
                /*&:before {
                    position:absolute;
                    content:"";
                    border-top: 1px solid currentColor;
                    left:10px;right:10px;top:-1px;
                    animation: tabBarBorder .2s ease-in-out;
                }*/
            }
        }
    }
}

#addNewURL b {
    animation: var(--addButtonAnimation,'') .4s ease-in-out;
    animation-delay: .5s;
}

html.blur .theme-sidebar-default #sidebar, .sidebar-block-bg {
    background: #F6F6F6;
}

html.retina.chrome {
    #sidebar {
        box-shadow: inset -0.5px 0px 0px rgba(0,0,0,.15);
        
        .tabBar {
            //margin-right: 0.5px;
            border-width: 0;
            box-shadow: 0px -0.5px 0px rgba(0,0,0,.17);
        }
    }
}

#panel {
    transform: translateX((panelWidth*-1));
    transform: translateX(calc(var(--panelWidth,panelWidth) * -1));
    display: flex;
    flex-direction: column;
    left: 0;
    bottom: 0;
    background: white;
    width: panelWidth;
    width: var(--panelWidth,panelWidth);
    z-index: 9;
    transition: transform layoutTransitionSpeed ease-in-out, width layoutTransitionSpeed ease-in-out, box-shadow layoutTransitionSpeed ease-in-out;
}

#panelContent {
    display: flex;
    flex-direction: column;
    transform: translateX(-100px);
    opacity: 0;
    transition: transform layoutTransitionSpeed ease-in-out, opacity layoutTransitionSpeed ease-in-out;
    transition-delay: (layoutTransitionSpeed / 2);
    overflow: initial !important;
    
    > div {
        flex: 1;
        display: flex;
        flex-direction: column;
        
        .superHeight {
            flex: 1;
        }
    }
}

.mode-panel {
    #panel {
        transform: translateX(sidebarWidth) !important;
        transform: translateX(var(--sidebarWidth, sidebarWidth)) !important;
    }
    #panelContent {
        transform: translateX(0);
        opacity:1;
    }
    
    &.mode-reader:not(.mode-force-sidebar) #panel {
        transform: translateX(0) !important;
    }
}



#sidebar-black-overlay {
    z-index: 8;
    background: rgba(0,0,0,.13)/*radial-gradient(rgba(0,0,0,0.03), rgba(0,0,0,0.17))*/;
    opacity: 0;
    transition: opacity .15s ease-in-out;
    position: absolute;left:0;right: 0;bottom: 0;top: 0;
    pointer-events: none;
}

.themeDark #sidebar-black-overlay {
    background: rgba(0,0,0,.3)
}

@keyframes tabBarActiveAppear {
    0% {
        opacity: tabBarDefaultOpacity;
    }
    100% {
        opacity:1;
    }
}

@keyframes tabBarTitleActiveAppear {
    0% {
        max-height: 15px;
        opacity: 1;
    }
    100% {
        max-height: 0;
        opacity:0;
    }
}

@keyframes tabBarBorder {
    0% {
        left:50%;right:50%;
    }
    30% {
        left:50%;right:50%;
    }
    100% {
        left:10px;right:10px;
    }
}