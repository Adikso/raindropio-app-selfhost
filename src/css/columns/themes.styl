themePreviewWidth = 90px;//125px

.themeList {
	padding-top: 8px;
	padding-left: 8px;
	display: inline-flex;
	float: left;
	flex-wrap: wrap;
	
	&.small {
		max-width: 300px;
	}
}

.themePreview {
	margin: 8px;
	width: round(themePreviewWidth * 1.4);
	height: themePreviewWidth;
	position: relative;
	border-radius: 2px;
	text-align: right;

	
	&.themePreviewSmall {
		width: 24px;height: 24px;
		
		.themePreviewMain {
			display: none;
		}
	}
	
	.themePreviewMain {
		width: 60%;
		display: inline-block;
		background-color: white;
		height: themePreviewWidth;
		box-shadow: -1px 0 0 rgba(0,0,0,.1);
		padding: 8px;
		color: black;
		
		span {
			display:block;
			height: 1px;
			background: currentColor;
			opacity: .1;
			margin: 8px;
			
			&:last-child {
				width: 50%;
			}
		}
	}
	
	&:before {
		border-radius: 2px;
		position: absolute;
		left:0;top:0;right:0;bottom:0;
		content:"";
		box-shadow: inset 0 0 0 1px rgba(0,0,0,.15);
		pointer-events: none;
	}
	
	&.active:before {
		box-shadow: inset 0 0 0 2px colorTheme;
	}
}

.theme-sidebar-default {
}

.theme-sidebar-dark {	
	&:not(.themeDark) {
		#sidebar {
			.button.active, .button {
				color: white;
			}
		}
	}

	#sidebar, &.themePreview, .sidebar-block-bg {
		background: darken(darkBackground,10%);
	}

	#sidebar, &.themePreview {
		box-shadow: none !important;
		color: rgba(255,255,255,.8);
		
		::-webkit-scrollbar-thumb {
			box-shadow: inset 0px 0px 0px 5px rgba(255,255,255,0.3);
	    }

	    .preloader .preloaderPath {stroke: white !important;}

		
		> footer {
			.selectButton {
				background: rgba(255,255,255,.08);
				box-shadow: none;
				border: 0.5px solid rgba(255,255,255,.1);
				
				&:active {
					background: rgba(255,255,255,.14);
				}
			}
		}
	}
}

