	::-webkit-scrollbar-thumb {
		box-shadow: inset 0px 0px 0px 5px rgba(255,255,255,0.3);
    }
	    
	#sidebar {
		box-shadow: inset -1px 0px 0px rgba(255,255,255,.05) !important;

		.clipper-save .clipper-save-button {
			color: black;
		}
	}
	#main, #panel, #reader:not([data-tab="preview"]), > .themePreviewMain {
		box-shadow: none !important;
		background-color: darkBackground;
		color: rgba(255,255,255,.8);
		
		::-webkit-scrollbar-thumb {
