@require "../consts.styl";
@require "../animations.styl";
sidebarWidth = (270px);
panelWidth = (300px);
mainCollapsedWidth = (400px);


#markup {
    width: 100%;
    height: 100%;
    position: relative;
    --sidebarWidth: sidebarWidth;
    --panelWidth: panelWidth;
    --mainCollapsedWidth: mainCollapsedWidth;
}

#sidebar, #main, #reader, #panel {
    position: absolute;
    //height: 100%;
    top:0;bottom:0;
    transition: 
        left layoutTransitionSpeed ease-in-out,
        right layoutTransitionSpeed ease-in-out,
        max-width layoutTransitionSpeed ease-in-out,
        width layoutTransitionSpeed ease-in-out,
        box-shadow layoutTransitionSpeed ease-in-out;
}

