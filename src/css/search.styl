@require "consts.styl"

.search {
	flex: 1
}

.s-content {
	max-width: 300px
	background: rgba(0,0,0,.05)
	border-radius: 2px
	display: flex
	justify-content: center
	padding: 3px

	.s-icon {
		opacity: .6
	}

	input {
		flex: 1
		display: block
		background: transparent
		appearance: none
		outline: none
		border: 0
		padding: 0 4px
	}

	&[data-focus="true"] {
		background: transparent
		box-shadow: inset 0 0 0 1px var(--accentColor), 0 0 0 1px var(--accentColor)
	}
}