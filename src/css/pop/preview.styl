@require "../consts.styl"

.popBodyPreview {

}

.popBodyPreviewSwitch {
	display: flex;
	padding: 5px;
	
	a {
		flex: 1;
		height: 24px;
		border-radius: 3px;
		margin: 5px;
		box-shadow: inset 0px 0px 0px 1px rgba(0,0,0,.1);

		&.auto {
			background: white
			position: relative
			overflow: hidden

			&:before {
				position: absolute
				left: 50%
				top: 0
				width: 100%
				height: 100%
				transform: skew(-45deg)
				content: ''
				background: linear-gradient(to bottom, rgba(0,0,0,.2) 0%, rgba(0,0,0,0.05) 100%)
			}
		}

		&.day {
			background: white
		}
		
		&.sunset {
			background: sunsetBackground;
		}

		&.dark {
			background: darkBackground;
		}

		&.active {
			box-shadow: inset 0px 0px 0px 1px colorTheme, inset 0px 0px 0px 3px white;
		}
		
	}
}

.popBodyPreviewFont {
	a {
		display: block;
		text-align: center;
		font-size: 16px;
		padding: 10px;
		color: black;
		box-shadow: inset 0px -1px 0px rgba(0,0,0,.07);

		&.georgia {
			font-family: Georgia;
		}

		&.verdana {
			font-family: Verdana;
		}
		
		&.active {
			background: colorTheme;
			background: var(--accentColor, colorTheme);
			color: white;
		}

		&:last-child {
			box-shadow: none;
		}
	}
}