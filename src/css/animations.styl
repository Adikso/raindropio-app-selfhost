@keyframes fadeAppear {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}
@keyframes fadeBrightAppear {
	0% {
		opacity: 0;
		filter: brightness(2);
		transform: scale(1.05);
	}
	100% {
		opacity: 1;
		filter: brightness(1);
		transform: scale(1);
	}
}
@keyframes rotate {
	100%{
		transform: rotate(360deg);
	}
}

.fadeBrightAppear {
	animation: fadeBrightAppear .4s linear;
}

.animation-rotate {
	animation: rotate 1.3s linear infinite;
}


translateYMinus()
	transform: translateY(-25px);opacity:0;
translateYPlus()
	transform: translateY(25px);opacity:0;

@keyframes translateToTopSlightly {
	0% {
		transform: translateY(0px);opacity:1;
	}
	100% {
		translateYMinus()
	}
}

@keyframes translateFromBottomSlightly {
	0% {
		translateYPlus()
	}
	100% {
		transform: translateY(0);opacity:1;
	}
}

.translateFromBottomSlightly {
	animation: translateFromBottomSlightly .5s ease-in-out;
}

.translateFromTopSlightly {
	animation: translateFromTopSlightly .3s ease-in-out;
}

@keyframes translateFromBottomSlightlyWithDelay {
	0% {
		translateYPlus()
	}
	50% {
		translateYPlus()
	}
	100% {
		transform: translateY(0);opacity:1;
	}
}

@keyframes translateToBottomSlightly {
	0% {
		transform: translateY(0px);opacity:1;
	}
	100% {
		translateYPlus()
	}
}

@keyframes translateFromTopSlightly {
	0% {
		translateYMinus()
	}
	100% {
		transform: translateY(0);opacity:1;
	}
}



