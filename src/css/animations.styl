@keyframes flying {
	0% {
		transform: translateY(0px);
	}
	50% {
		transform: translateY(6px);
	}
	100% {
		transform: translateY(0px);
	}
}
@keyframes flyingAround {
	0% {
		transform: translateY(0px) translateX(6px);
	}
	25% {
		transform: translateY(6px) translateX(0px);
	}
	50% {
		transform: translateY(0px) translateX(-6px);
	}
	75% {
		transform: translateY(-6px) translateX(0px);
	}
	100% {
		transform: translateY(0px) translateX(6px);
	}
}

.animation-flying {
	animation: flying 3s ease-in-out infinite;
}



@keyframes addButtonAnimation {
	0% {
		transform: scale(0.8);
	}
	50% {
		background: var(--accentColor);
		color: white;
		transform: scale(1.2);
	}
	70% {
		transform: scale(.7);
	}
	100% {
		transform: scale(1);
	}
}


@keyframes inputFocusAnimation {
	0% {
		box-shadow: 0 0 0 16px rgba(255,255,255,0);
	}
	70% {
		box-shadow: 0 0 0 1px rgba(colorTheme, .5);
	}
	100% {
		box-shadow: 0 0 0 2px rgba(colorTheme, .5);
	}
}